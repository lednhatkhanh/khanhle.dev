{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "jsx": "preserve",
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "~components/*": ["./components/*"],
      "~models/*": ["./models/*"],
      "~templates/*": ["./templates/*"]
    },
    "skipDefaultLibCheck": true,
    "esModuleInterop": true
  }
}
